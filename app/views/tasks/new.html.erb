<h1>New Task</h1>
<div class="panel panel-success">
  <div class="panel-body">
    <%= form_for @task do |f| %>
      <div class="form-group">
        <div class="input-group">
          <%= f.text_field :name, class: "form-control", placeholder: 'Add a Task' %>
          <span class="input-group-btn"><%= f.submit 'Add', class: 'btn btn-success' %></span>
        </div>
      </div>
    <% end %>
  </div>
</div>
